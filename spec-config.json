{
  "spec_workflow": {
    "version": "2.0.0",
    "auto_create_directories": true,
    "auto_reference_requirements": true,
    "enforce_approval_workflow": true,
    "default_feature_prefix": "feature-",
    "supported_formats": [
      "markdown",
      "mermaid"
    ],
    "multi_module_support": true,
    "modules": {
      "server": {
        "name": "mockup_v3",
        "description": "3rd mockup for Aegis",
        "technology_stack": [
          "React",
          "TypeScript",
          "Tailwind CSS"
        ],
        "directory": "mockup/v3",
        "architecture_file": "documentation/modules/mockup_v3/architecture.md",
        "features_directory": "documentation/modules/mockup_v3/features/"
      }
    },
    "cross_module_features": {
      "enabled": true,
      "directory": "documentation/features/",
      "integration_template": "integration-template.md"
    },
    "workflow_modes": [
      "single-module",
      "cross-module"
    ]
  }
}